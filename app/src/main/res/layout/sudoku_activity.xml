<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="itemClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="sudokuViewModel"
            type="com.xwl.mvvm.business.sudoku.SudokuViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/title_activity"
            bind:commonTileClick="@{sudokuViewModel.commonTileClick}"
            bind:commonTitle="@{sudokuViewModel.activityTitle}" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="38dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="26dp"
            android:background="@color/line"
            app:layout_constraintTop_toBottomOf="@id/line_top"
            app:sudokuBindBoard="@{sudokuViewModel.board}" />

        <com.xwl.mvvm.business.sudoku.weidgh.CoverView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/recyclerViewBox"
            app:layout_constraintEnd_toEndOf="@id/recyclerViewBox"
            app:layout_constraintStart_toStartOf="@id/recyclerViewBox"
            app:layout_constraintTop_toTopOf="@id/recyclerViewBox" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="26dp"
            android:background="@color/sudoSelectInput"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewBox"
            app:sudokuBindBoardInput="@{sudokuViewModel.boardInput}" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reSet"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:onClick="@{(view)->itemClick.onClick(view)}"
            android:text="@string/reset"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/play"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyInput" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/play"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:onClick="@{(view)->itemClick.onClick(view)}"
            android:text="@string/play"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/reSet"
            app:layout_constraintTop_toBottomOf="@id/recyInput" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
