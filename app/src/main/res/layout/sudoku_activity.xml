<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="itemClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="sudokuViewModel"
            type="com.xwl.mvvm.business.sudoku.SudokuViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/title_activity"
            bind:commonTileClick="@{sudokuViewModel.commonTileClick}"
            bind:commonTitle="@{sudokuViewModel.activityTitle}" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="38dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="26dp"
            android:background="@color/sudoFont"
            app:layout_constraintTop_toBottomOf="@id/line_top"
            app:sudokuBindBoard="@{sudokuViewModel.board}" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="26dp"
            android:background="@color/sudoSelectInput"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewBox"
            app:sudokuBindBoardInput="@{sudokuViewModel.boardInput}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
